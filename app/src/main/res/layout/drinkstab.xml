<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdbdbd"
    tools:context=".waitress$PlaceholderFragment">

    <Spinner
        android:id="@+id/spfinal"
        android:layout_width="165dp"
        android:layout_height="51dp" />

    <Button
        android:id="@+id/AddFinal"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/drinklistfinal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/drinklistfinal"
        android:layout_width="223dp"
        android:layout_height="282dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray">


    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/AddFinal"
        android:layout_alignParentTop="true"
        android:text="Ποσοτητα"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerpos"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/spfinal"
        android:layout_marginEnd="20dp" />

</RelativeLayout>